{% extends 'base.html.twig' %}

{% block title %}Show index{% endblock %}

{% block body %}
    <h1>Show index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Start</th>
                <th>Finish</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for show in shows %}
            <tr>
                <td>{{ show.id }}</td>
                <td>{{ show.name }}</td>
                <td>{{ show.start ? show.start|date('H:i:s') : '' }}</td>
                <td>{{ show.finish ? show.finish|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_show_show', {'id': show.id}) }}">show</a>
                    <a href="{{ path('app_show_edit', {'id': show.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_show_new') }}">Create new</a>
{% endblock %}
