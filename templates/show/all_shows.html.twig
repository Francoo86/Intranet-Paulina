{% block body %}
    <style>
        table td {
            width: 200px;
            border: 1px dotted silver;
            word-break: break-all;  
        }
    </style>
    {% for show in shows %}
        <tr>
            <td class="text-nowrap align-middle">
                <span>{{ show.id }}</span>
            </td>
            <td class="text-justify align-middle">
                <span>{{ show.name }}</span>
            </td>
            <td class="text-nowrap align-middle">
                <span>{{ show.start ? show.start|date('H:i:s') : 'No ha empezado'}}</span>
            </td>
            <td class="text-nowrap align-middle">
                <span>{{ show.finish ? show.finish|date('H:i:s') : 'No ha finalizado'}}</span>
            </td>
            <td class="text-nowrap align-middle">
                <span>{{ show.guideline ? show.guideline : "Sin pauta" }}</span>
            </td>
            <td class="text-nowrap align-middle">
                <button type="button" class="btn btn-primary {{show.publicities|length > 0 ? 'enabled' : 'disabled'}}" data-toggle="modal" data-target="#showsAsociados-{{show.id}}">
                    Ver
                </button>
                <!-- Modal -->
                {% if show.publicities|length > 0 %}
                    <div class="modal fade" id="showsAsociados-{{show.id}}" tabindex="-1" role="dialog" aria-labelledby="showsAsociadosLabel{{show.id}}" aria-hidden="true">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="showsAsociadosLabel{{show.id}}">Publicidades asociadas al programa</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                
                                <div class="modal-body">
                                    <table class="table table-striped table-hover table-responsive">
                                        <thead>
                                        <tr>
                                            <th scope="col">ID</th>
                                            <th scope="col">Fondo musical</th>
                                            <th scope="col">Duración (en segundos)</th>
                                            <th scope="col">Descripción de la publicidad</th>
                                            <th scope="col">Cliente</th>
                                            <th scope="col">Audiencia</th>
                                            <!-- DEBERIA MANDAR A OTRA PAGINA-->
                                            <!--<th scope="col">Editar</th>-->
                                        </tr>
                                        </thead>
                                        <!-- copypasting the font-weight-normal shit-->
                                        <tbody>
                                            {% for publicity in show.publicities %}
                                                <tr>
                                                    <th class="font-weight-normal" scope="row">{{publicity.id}}</td>
                                                    <td class="font-weight-normal">{{publicity.background}}</td>
                                                    <td class="font-weight-normal" scope="row">{{publicity.duration}}</td>
                                                    <th class="font-weight-normal" style="white-space: normal">{{publicity.description}}</th>
                                                    <th class="font-weight-normal" style="white-space: normal">{{publicity.customer ? publicity.customer : "SIN CLIENTE"}}
                                                    <td class="font-weight-normal">{{publicity.audience}}</td>
                                                </tr>
                                                <!--
                                                <tr>
                                                    <th class="font-weight-normal" scope="row">{{show.id}}</th>
                                                    <th class="font-weight-normal">{{show.name}}</th>
                                                    <th class="font-weight-normal">{{show.start|date('H:i:s')}}</th>
                                                    <th class="font-weight-normal">{{show.finish|date('H:i:s')}}</th>
                                                </tr>-->
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </td>
            <td class="text-center align-middle">
                <div class="btn-group align-top">
                    <button class="btn btn-sm btn-outline-secondary badge" type="button" data-toggle="modal"
                        data-target="#user-form-modal_{{ show.id }}">
                        Editar
                    </button>
                    <button class="btn btn-sm btn-outline-secondary badge trash-borrado" type="button" data-toggle="modal" data-id={{show.id}} data-target="#deleteConfirmationModal_{{show.id}}">
                        <i class="fa fa-trash"></i>
                    </button>
                </div>
            </td>
        </tr>

        {% include 'delete_form.html.twig' with {
            'removeId': show.id,
            'deleteTitle': 'Eliminación de programa',
            'confirmMessage': '¿Está seguro de eliminar el programa: %s?'|format(show.name),
            'deletePath': 'app_show_delete'
        }%}
    {% endfor %}

    <!-- CARGAR FORMULARIOS PARA CADA UNO EN MODAL. -->
    {% for edit_form in allForms %}
        {% set id = edit_form.form.vars.value.id %}
        {% include 'modal_base_form.html.twig' with {
            'passedForm' : edit_form.form,
            'titleForm': 'Edición de programa',
            'actualId': id,
        }%}
    {% endfor %}
{% endblock %}
