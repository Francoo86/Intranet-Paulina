{% extends 'base.html.twig' %}
{% block body %}

    <div id="piechart"></div>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
      google.charts.load('current', {'packages':['corechart']});
      google.charts.setOnLoadCallback(drawChart);

      function drawChart() {
        var data = google.visualization.arrayToDataTable([
          ['Demography', 'Count'],
          {% for item in demographicsCount %}
            ['{{ item.demography }}', {{ item.count }}],
          {% endfor %}
        ]);

        //Title
        var options = {'title':'Audiencia seg√∫n su Demografia', 'width':550, 'height':400};

        // Display the chart inside the <div>
        var chart = new google.visualization.PieChart(document.getElementById('piechart'));
        chart.draw(data, options);
      }
    </script>


    <div id="locationchart"></div>
    <script type="text/javascript">
        google.charts.load('current', {'packages':['corechart']});
        google.charts.setOnLoadCallback(drawLocationChart);

        // Draw the chart and set the chart values
        function drawLocationChart() {
            var data = google.visualization.arrayToDataTable([
            ['Locality', 'Count'],
            {% for item in locationCount %}
                ['{{ item.locality }}', {{ item.count }}],
            {% endfor %}
            ]);

            // Optional; add a title and set the width and height of the chart
            var options = {'title':'Location Count', 'width':550, 'height':400};

            // Display the chart inside the <div> element with id="locationchart"
            var chart = new google.visualization.PieChart(document.getElementById('locationchart'));
            chart.draw(data, options);
        }
    </script>
{% endblock %}
