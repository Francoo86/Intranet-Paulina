{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header justify-content-between d-flex align-items-center">
                    <h4 class="card-title">Manejo de clientes</h4>
                </div><!-- end card header -->
                <div class="card-body">            
                    <form class="row gx-3 gy-2 align-items-center">
                        <div class="col-sm-3">
                            <label class="visually-hidden" for="inputName">RUT del cliente</label>
                            <input type="text" class="form-control" id="inputName" placeholder="Introduzca RUT">
                        </div>
                        <!-- end col -->
                        <div class="col-sm-3">
                            <label class="visually-hidden" for="specificSizeInputGroupUsername">Username</label>
                            <div class="input-group">
                            <div class="input-group-text">@</div>
                            <input type="text" class="form-control" id="specificSizeInputGroupUsername" placeholder="Username">
                            </div>
                        </div>
                        <!-- end col -->
                        <div class="col-auto">
                            <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="autoSizingCheck2">
                            <label class="form-check-label" for="autoSizingCheck2">
                                Remember me
                            </label>
                            </div>
                        </div>
                        <!-- end col -->
                        <div class="col-auto">
                            <button type="button" class="btn btn-primary">Agregar nuevo cliente</button>
                        </div>
                        <!-- end col -->
                    </form><!-- end form -->
                </div><!-- end card body -->
            </div><!-- end card -->
        </div><!-- end col -->
    <div class="col-12 col-lg-3 mb-3">
        <div class="card">
            <div class="card-body">
                <div class="text-center px-xl-3">
                    <button class="btn btn-success btn-block" type="button" data-toggle="modal" data-target="#user-form-modal_new">
                        {{newElement|default('New element')}}
                    </button>
                </div>
                <hr class="my-3" />
                <div class="e-navlist e-navlist--active-bold">
                    <ul class="nav">
                        <li class="nav-item active">
                            <a href class="nav-link">
                                <span>Todos</span> 
                                <small>/ {{elementCount}}</small>
                            </a>
                        </li>
                    </ul>

                    <script defer>
                        $(document).ready(function () {
                        // Función común para ambos botones
                        function handleButtonClick(buttonId, url) {
                            $(buttonId).prop("disabled", true);
                            var count = 0;
                            $.ajax({
                            type: "POST",
                            url: url,
                            success: function (response) {
                                count++;
                                alert(response);
                            },
                            error: function (error) {
                                alert("Error: " + error.responseText);
                            },
                            complete: function () {
                                alert("Number of emails sent: " + count);
                                $(buttonId).prop("disabled", false);
                            },
                            });
                        }

                        // Configuración de los clics para ambos botones
                        //Esto debería ir en otro lado.
                        $("#alertButton").click(function () {
                            handleButtonClick("#alertButton", "/send/AlertEmail/Data");
                        });

                        $("#infoButton").click(function () {
                            handleButtonClick("#infoButton", "/send/AllEmail/Data");
                        });
                        });
                    </script>
                </div>
                <hr class="my-3" />
                <div class="form-group">
                    <label>{{searchText|default("Search")}}</label>
                    <div>
                        <input id="{{searchId}}" class="form-control w-100" type="text" placeholder="" value />
                    </div>
                </div>
                <hr class="my-3" />
                <div class="form-group">
                    <style>
                        .btn-custom {
                            width: 100%;
                            height: 40px;
                            margin-bottom: 10px;
                        }
                    </style>
                    <button type="button" class="btn btn-danger btn-custom" id="alertButton">
                        Alertar Saldo Bajo
                    </button>
                    <button type="button" class="btn btn-primary btn-custom" id="infoButton">
                        Informar clientes
                    </button>
                </div>
            </div>
        </div>
        <script defer type="text/javascript">
            $("#{{searchId}}").change(function (e) { 
                e.preventDefault();

                let search = $(this).val();

                $.ajax({
                    type: 'GET',
                    url: "{{searchPath}}",
                    data: {'target': search},
                    dataType: 'json',
                    success: function (response) {
                        //console.log(response);
                        $("#output_table").html(response);
                    }
                });
            });
        </script>
    </div>
{% endblock %}
