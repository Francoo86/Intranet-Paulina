{% extends 'base.html.twig' %}
    {% block body %}
        <head>
            {% block head %}

            {% endblock %}
            <meta charset="utf-8" />
            <!-- Titulo de la aplicacion -->
            <meta name="viewport" content="width=device-width, initial-scale=1" />
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.1/dist/css/bootstrap.min.css" rel="stylesheet" />
            <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" />
            <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.1/dist/js/bootstrap.bundle.min.js"></script>
            <style type="text/css">
                body {
                    margin-top: 20px;
                    background: #f8f8f8;
                }
            </style>
        </head>

        {% set active = app.request.attributes.get('_route') %}
        <body>
            <div class="container {{active == 'app_publicity_index' ? 'ml-5'}}">
                <div class="row flex-lg-nowrap">
                    <div class="col">
                        <div class="e-tabs mb-3 px-3">
                            <ul class="nav nav-tabs">

                                <li class="nav-item">
                                    <a class="nav-link {{active == 'app_guideline_index' ? 'active'}}" href="{{path('app_guideline_index')}}">Pautas</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link {{active == 'app_show_index' ? 'active'}}" href="{{path('app_show_index')}}">Programas</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link {{active == 'app_publicity_index' ? 'active'}}" href="{{path('app_publicity_index')}}">Publicidad</a>
                                </li>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link {{active == 'app_broadcaster_index' ? 'active'}}" href="{{path('app_broadcaster_index')}}">Locutor</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link {{active == 'app_customer_index' ? 'active'}}" href="{{path('app_customer_index')}}">Clientes</a>
                                </li>
                            </ul>
                        </div>
                        {% block crud %}
                            
                        {% endblock %}
                    </div>
                </div>
            </div>
        </body>
    {% endblock %}