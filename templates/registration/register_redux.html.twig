<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Registro Radio Paulina</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
</head>

<body>
    <section class="h-100">
        <div class="container h-100">
            <div class="row justify-content-sm-center h-100">
                <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
                    <div class="text-center my-5">
                        <img src="{{asset('images/better-logo.png')}}" alt="logo" width="100">
                    </div>
                    <div class="card shadow-lg">
                        <div class="card-body p-5">
                            {{ form_start(registrationForm) }}
                                <div class="mb-3">
                                    <label class="mb-2 text-muted" for="{{ registrationForm.email.vars.id }}">Correo electronico</label>
                                    {{ form_widget(registrationForm.email, {
                                        attr: {
                                            class: "form-control",
                                            autocomplete: "off",
                                            required: true
                                        }
                                    }) }}
                                    {{ form_errors(registrationForm.email) }}
                                </div>

                                <div class="mb-3">
                                    <label class="mb-2 text-muted" for="{{ registrationForm.plainPassword.vars.id }}">Contraseña</label>
                                    {{ form_widget(registrationForm.plainPassword, {
                                        attr: {
                                            class: "form-control",
                                            autocomplete: "new-password",
                                            required: true
                                        }
                                    }) }}
                                    {{ form_errors(registrationForm.plainPassword) }}
                                </div>

                                <div class="mb-3">
                                    <label class="mb-2 text-muted" for="{{ registrationForm.manager.first_name.vars.id }}">Nombres</label>
                                    {{ form_widget(registrationForm.manager.first_name, {
                                        attr: {
                                            class: "form-control",
                                            required: true
                                        }
                                    }) }}
                                    {{ form_errors(registrationForm.manager.first_name) }}
                                </div>

                                <div class="mb-3">
                                    <label class="mb-2 text-muted" for="{{ registrationForm.manager.last_name.vars.id }}">Apellidos</label>
                                    {{ form_widget(registrationForm.manager.last_name, {
                                        attr: {
                                            class: "form-control",
                                            required: true
                                        }
                                    }) }}
                                    {{ form_errors(registrationForm.manager.last_name) }}
                                </div>

                                <div class="mb-3">
                                    <label class="mb-2 text-muted" for="{{ registrationForm.manager.phone.vars.id }}">Telefono</label>
                                    {{ form_widget(registrationForm.manager.phone, {
                                        attr: {
                                            class: "form-control",
                                            required: true
                                        }
                                    }) }}
                                    {{ form_errors(registrationForm.manager.phone) }}
                                </div>

								<div class="form-group text-center d-flex flex-column align-items-center">
									<button type="submit" class="btn btn-lg btn-primary">Registrarse</button>
								</div>
								
                            {{ form_end(registrationForm) }}
                        </div>
                        <div class="card-footer py-3 mb-10 border-0">
                            <div class="text-center">
                                ¿Ya posee cuenta? <a href="{{ path('app_login') }}" class="text-dark">Logearse</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="{{asset('js/login_bootstrap.js')}}"></script>
</body>
</html>
