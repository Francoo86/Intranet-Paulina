{% block body %}
    <div class="row flex-lg-nowrap">
        <div class="col mb-3">
            <div class="e-panel card">
                <div class="card-body">
                    <div class="card-title">
                        <h6 class="mr-2">
                            <span>Programas</span>
                        </h6>
                    </div>
                    <div class="e-table">
                        <div class="table-responsive table mt-2">
                            <table class="table-responsive table-bordered">
                                <thead>
                                    <tr>
                                        <th class="sortable">ID</th>
                                        <th class="max-width">Frase</th>
                                        <th class="max-width">Fondo</th>
                                        <th class="max-width">Descripción de la publicidad</th>
                                        <th class="max-width">Stock</th>
                                        <th class="max-width">Cliente</th>
                                        <th class="max-width">Audiencia</th>
                                        <th class="max-width">Programa</th>
                                        <th class="max-width">Pauta</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody id="output_table">
                                    {% include 'publicity/all_publicities.html.twig' %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% include 'search.html.twig' with {
            "newElement": "Nueva publicidad",
            'elementCount': publicities|length,
            "searchText": "Buscar publicidad por pauta",
            "searchId": "busca_publicidad",
            "searchPath": path('app_search_show'),
        } %}

        {% include 'modal_base_form.html.twig' with {
            'passedForm' : creationForm,
            'titleForm': 'Creación de publicidad',
        }%}
    </div>
{% endblock %}