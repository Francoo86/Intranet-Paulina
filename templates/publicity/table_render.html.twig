{% block body %}
    <div class="row flex-lg-nowrap">
        <div class="col mb-3">
            <div class="e-panel card">
                <div class="card-body">
                    <div class="card-title">
                        <h6 class="mr-2">
                            <span>Programas</span>
                        </h6>
                    </div>
                    <div class="e-table">
                        <div class="table-responsive table-lg mt-2">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th class="sortable">ID</th>
                                        <th class="max-width">Nombre de programa</th>
                                        <th class="max-width">Hora de inicio</th>
                                        <th class="max-width">Hora de finalizacion</th>
                                        <th class="max-width">Pauta</th>
                                        <th class="max-width">Publicidades</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody id="output_table">
                                    {% include 'publicity/all_publicities.html.twig' %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% include 'search.html.twig' with {
            "newElement": "Nuevo programa.",
            'elementCount': publicities|length,
            "searchText": "Buscar programas por nombre",
            "searchId": "busca_programas",
            "searchPath": path('app_search_show'),
        } %}

        {% include 'modal_base_form.html.twig' with {
            'passedForm' : creationForm,
            'titleForm': 'Creaci√≥n de programa',
        }%}
    </div>
{% endblock %}