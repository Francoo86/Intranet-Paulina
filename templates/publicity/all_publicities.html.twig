{% block body %}
    {% for publicity in publicities %}
        <tr>
            <td class="text-nowrap align-middle">
                <span>{{publicity.id}}</span>
            </td>
            <td class="text-justify align-middle">
                <span>{{publicity.sentence}}</span>
            </td>
            <td class="text-nowrap align-middle">
                <span>{{publicity.background ? publicity.background : "SIN FONDO"}}</span>
            </td>
            <td class="text-justify align-middle">
                <span>{{publicity.description}}</span>
            </td>
            <td class="text-nowrap align-middle">
                <span>{{publicity.Stock}}</span>
            </td>
            <td class="text-nowrap align-middle">
                <span>{{publicity.customer}}</span>
            </td>
            <td class="text-nowrap align-middle">
                <span>{{publicity.audience}}</span>
            </td>
            <td class="text-nowrap align-middle">
                <span>{{publicity.Show}}</span>
            </td>
            <td class="text-nowrap align-middle">
                <span>{{publicity.guideline}}</span>
            </td>
            <td class="text-nowrap align-middle">
                <button type="button" class="btn btn-primary {{publicities|length > 0 ? 'enabled' : 'disabled'}}" data-toggle="modal" data-target="#publicidadesAsociados-{{publicity.id}}">
                    Ver
                </button>
                <!-- Modal -->
                {#
                {% if publicities|length > 0 %}
                    <div class="modal fade" id="publicidadesAsociados-{{show.id}}" tabindex="-1" role="dialog" aria-labelledby="publicidadesAsociadosLabel{{show.id}}" aria-hidden="true">
                        <div class="modal-dialog modal-lg" role="document" style="max-width: 80%;">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="publicidadesAsociadosLabel{{show.id}}">Publicidades asociadas al programa</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                
                                <div class="modal-body">
                                    <table class="table table-striped table-hover table-responsive">
                                        <thead>
                                        <tr>
                                            <th scope="col">ID</th>
                                            <th scope="col">Oración de la publicidad</th>
                                            <th scope="col">Fondo musical</th>
                                            <th scope="col">Duración (en segundos)</th>
                                            <th scope="col">Descripción de la publicidad</th>
                                            <th scope="col">Cliente</th>
                                            <th scope="col">Audiencia</th>
                                            <!-- DEBERIA MANDAR A OTRA PAGINA-->
                                            <!--<th scope="col">Editar</th>-->
                                        </tr>
                                        </thead>
                                        <tbody>
                                            {% for publicity in publicities %}
                                                <tr>
                                                    <th class="font-weight-normal" scope="row">{{publicity.id}}</td>
                                                    <td class="font-weight-normal">{{publicity.sentence}}</td>
                                                    <td class="font-weight-normal">{{publicity.background}}</td>
                                                    <td class="font-weight-normal" scope="row">{{publicity.duration}}</td>
                                                    <th class="font-weight-normal" style="white-space: normal">{{publicity.description}}</th>
                                                    <th class="font-weight-normal" style="white-space: normal">{{publicity.customer ? publicity.customer : "SIN CLIENTE"}}
                                                    <td class="font-weight-normal">{{publicity.audience}}</td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %} #}
            </td>
            <td class="text-center align-middle">
                <div class="btn-group align-top">
                    <button class="btn btn-sm btn-outline-secondary badge" type="button" data-toggle="modal"
                        data-target="#user-form-modal_{{publicity.id }}">
                        Editar
                    </button>
                    <button class="btn btn-sm btn-outline-secondary badge trash-borrado" type="button" data-toggle="modal" data-id={{publicity.id}} data-target="#deleteConfirmationModal_{{publicity.id}}">
                        <i class="fa fa-trash"></i>
                    </button>
                </div>
            </td>
        </tr>

        {% include 'delete_form.html.twig' with {
            'removeId': publicity.id,
            'deleteTitle': 'Eliminación de programa',
            'confirmMessage': '¿Está seguro de eliminar la publicidad asociada a: %s?'|format(publicity.Show),
            'deletePath': 'app_show_delete'
        }%}
    {% endfor %}

    <!-- CARGAR FORMULARIOS PARA CADA UNO EN MODAL. -->
    {% for edit_form in allForms %}
        {% set id = edit_form.form.vars.value.id %}
        {% include 'modal_base_form.html.twig' with {
            'passedForm' : edit_form.form,
            'titleForm': 'Edición de programa',
            'actualId': id,
        }%}
    {% endfor %}
{% endblock %}
