{% block body %}
    {% for stock_index, stock in stocks %}
        {% set publicity = stock.Publicity %}
        <tr>
            <td class="text-nowrap align-middle">
                <span>{{ stock.id }}</span>
            </td>
            <td class="text-justify align-middle">
                <span>{{ stock.time }}</span>
            </td>
            <td class="text-nowrap align-middle">
                <span>{{ stock.amount}}</span>
            </td>
            <td class="text-nowrap align-middle">
                <button type="button" class="btn btn-primary {{publicity is not null ? 'enabled' : 'disabled'}}" data-toggle="modal" data-target="#stocksAsociados-{{stock.id}}">
                    Ver
                </button>
                {% if publicity is not null %}
                        <div class="modal fade" id="stocksAsociados-{{stock.id}}" tabindex="-1" role="dialog" aria-labelledby="stocksAsociadosLabel{{stock.id}}" aria-hidden="true">
                        <div class="modal-dialog modal-lg" role="document" style="max-width: 80%;">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="stocksAsociadosLabel{{stock.id}}">Publicidad la cual contiene este stock</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                
                                <div class="modal-body">
                                    <table class="table table-striped table-hover table-responsive">
                                        <thead>
                                        <tr>
                                            <th scope="col">ID</th>
                                            <th scope="col">Oración de la publicidad</th>
                                            <th scope="col">Fondo musical</th>
                                            <th scope="col">Duración (en segundos)</th>
                                            <th scope="col">Descripción de la publicidad</th>
                                            <th scope="col">Cliente</th>
                                            <th scope="col">Audiencia</th>
                                            <!-- DEBERIA MANDAR A OTRA PAGINA-->
                                            <!--<th scope="col">Editar</th>-->
                                        </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <th class="font-weight-normal" scope="row">{{publicity.id}}</td>
                                                <td class="font-weight-normal">{{publicity.sentence}}</td>
                                                <td class="font-weight-normal">{{publicity.background}}</td>
                                                <td class="font-weight-normal" scope="row">{{publicity.duration}}</td>
                                                <th class="font-weight-normal" style="white-space: normal">{{publicity.description}}</th>
                                                <th class="font-weight-normal" style="white-space: normal">{{publicity.customer ? publicity.customer : "SIN CLIENTE"}}
                                                <td class="font-weight-normal">{{publicity.audience}}</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}
                <!-- Modal -->
                {% set balanceForm = allForms[stock_index].balanceForm %}
                <td class="text-nowrap align-middle">
                    {% if stock.Balance is null %}
                        <button type="button" data-toggle="modal" class="btn btn-primary" data-target="#balance-form-modal_new"><i class="fa fa-plus"></i> </button>
                        {% include 'stock/balance_form.html.twig' with {
                            'passedForm' : balanceForm,
                            'titleForm': 'Agregar bolsa',
                        }%}
                    {% else %}
                        {% set balanceId = stock.Balance.id %}
                        <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#balance-form-modal_{{balanceId}}"><i class="fa fa-pencil"></i></button>
                        {% include 'stock/balance_form.html.twig' with {
                            'passedForm' : balanceForm,
                            'titleForm': 'Arreglo de bolsa',
                            'actualId' : balanceId,
                        }%}
                        <button type="button" class="btn btn-danger"><i class="fa fa-trash"></i></button>
                    {% endif %}
                </td>
                
            <td class="text-center align-middle">
                <div class="btn-group align-top">
                    <button class="btn btn-sm btn-outline-secondary badge" type="button" data-toggle="modal"
                        data-target="#user-form-modal_{{ stock.id }}">
                        Editar
                    </button>
                    <button class="btn btn-sm btn-outline-secondary badge trash-borrado" type="button" data-toggle="modal" data-id={{stock.id}} data-target="#deleteConfirmationModal_{{stock.id}}">
                        <i class="fa fa-trash"></i>
                    </button>
                </div>
            </td>
        </tr>

        {% include 'delete_form.html.twig' with {
            'removeId': stock.id,
            'deleteTitle': 'Eliminación de programa',
            'confirmMessage': '¿Está seguro de eliminar el stock con el monto de %s?'|format(stock.amount),
            'deletePath': 'app_stock_delete'
        }%}
    {% endfor %}

    <!-- CARGAR FORMULARIOS PARA CADA UNO EN MODAL. -->
    {% for edit_form in allForms %}
        {% set id = edit_form.form.vars.value.id %}
        {% include 'modal_base_form.html.twig' with {
            'passedForm' : edit_form.form,
            'titleForm': 'Edición de stock',
            'actualId': id,
        }%}
    {% endfor %}
{% endblock %}
