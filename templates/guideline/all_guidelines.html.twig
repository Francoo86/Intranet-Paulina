{% block body %}
    {% for guideline in guidelines %}
        <tr>
            <td class="text-nowrap align-middle">
                <span>{{guideline.id}}</span>
            </td>
            <td class="text-justify align-middle">
                <span>{{guideline.showName }}</span>
            </td>
            <td class="text-nowrap align-middle">
                <span>{{ guideline.emissionNumber }}</span>
            </td>
            <td class="text-nowrap align-middle">
                <span>{{ guideline.creationDate ? guideline.creationDate|date('d-m-Y') : '' }}</span>
            </td>
            <td class="text-nowrap align-middle">
                <span>{{ guideline.broadcaster ? guideline.broadcaster : 'Ninguno' }}</span>
            </td>
            <td class="text-justify align-middle">
                <span>{{ guideline.manager ? guideline.manager : 'Ninguno' }}</span>
            </td>
            <td class="text-nowrap align-middle">
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#showsAsociados">
                   Ver
                  </button>
                  
                  <!-- Modal -->
                  <div class="modal fade" id="showsAsociados" tabindex="-1" role="dialog" aria-labelledby="showsAsociadosLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="showsAsociadosLabel">Shows asociados a la pauta</h5>
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                        <div class="modal-body">
                          {% for show in guideline.shows %}
                            <p>{{show.id}}</p>
                          {% endfor %}
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                          <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                      </div>
                    </div>
                  </div>

            </td>
            <td class="text-center align-middle">
                <div class="btn-group align-top">
                    <button
                        class="btn btn-sm btn-outline-secondary badge"
                        type="button"
                        data-toggle="modal"
                        data-target="#user-form-modal_{{guideline.id}}"
                    >
                        Editar
                    </button>
                    <button
                        class="btn btn-sm btn-outline-secondary badge"
                        type="button"
                    >
                        <i class="fa fa-trash"></i>
                    </button>
                </div>
            </td>
        </tr>
    {% endfor %}

    <!-- CARGAR FORMULARIOS PARA CADA UNO EN MODAL. -->
    {% for edit_form in allForms %}
        {% set id = edit_form.form.vars.value.id %}
        {% include 'guideline/modal_base_form.html.twig' with {
            'passedForm' : edit_form.form,
            'titleForm': 'Edici√≥n de pauta',
            'actualId': id,
        }%}
    {% endfor %}
{% endblock %}